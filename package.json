{
  "name": "timo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "mobile": "npm run dev --workspace=@timo/mobile",
    "web": "npm run dev --workspace=@timo/web",
    "storybook": "npm run storybook --workspace=@timo/ui",
    "test": "turbo run test",
    "setup": "source ~/.nvm/nvm.sh && nvm use && echo 'Node.js 버전이 .nvmrc에 맞게 설정되었습니다: '$(node --version)"
  },
  "devDependencies": {
    "@storybook/nextjs": "^8.6.14",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "prettier": "^3.0.3",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "turbo": "^1.10.12",
    "typescript": "^5.2.2"
  },
  "packageManager": "npm@10.8.1",
  "engines": {
    "node": ">=20.0.0"
  }
}
